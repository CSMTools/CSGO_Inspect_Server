{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "target": "es2022",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictNullChecks": true
  },
  "include": [
    "account.txt",
    "index.ts",
    "config.ts",
    "src"
  ],
  "exclude": [
    "config.example.ts"
  ]
}